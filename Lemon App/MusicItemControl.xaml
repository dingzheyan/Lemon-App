<UserControl x:Class="Lemon_App.MusicItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lemon_App"
             mc:Ignorable="d" 
             Height="50" Background="#00000000" Width="591">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60*"/>
            <ColumnDefinition Width="20*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="Nm" TextWrapping="Wrap" Text="MusicName" Foreground="#FFEEEEEE" FontSize="14" Margin="5,15,0,15" HorizontalAlignment="Left"/>
        <TextBlock x:Name="GS" TextWrapping="Wrap" Foreground="#FFCFCFCF" FontSize="14" Margin="5,15,0,15" Grid.Column="1" HorizontalAlignment="Left" Text="MusicSinger"/>
        <TextBlock x:Name="ZJ" HorizontalAlignment="Left" TextWrapping="Wrap" Foreground="#FFCFCFCF" FontSize="14" Margin="5,15,0,15" Grid.Column="2" Text="MusicAlbum"/>

    </Grid>
</UserControl>
