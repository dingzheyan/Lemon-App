                <DropShadowEffect Color="#FF2D2D30" Direction="340" Opacity="0.4"/>
            </Border.Effect>
            <Border CornerRadius="100">
                <Border.Background>
                    <RadialGradientBrush>
                        <GradientStop Offset="0"/>
                        <GradientStop Color="#33000000" Offset="1"/>
                    </RadialGradientBrush>
                </Border.Background>
            </Border>
        </Border>

    </Grid>
</Window>
